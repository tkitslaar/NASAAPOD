{
  "name": "template-vite",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "start": "spandx & vite --force",
    "build": "rm -rf dist && vue-tsc --noEmit && vite build",
    "dev": "npm run build && npm start",
    "test:unit": "vite-jest --no-cache",
    "test:e2e": "cypress open",
    "cypress:ci": "npm run start & cypress run --spec './cypress/**/*.spec.ts'",
    "preview": "vite preview",
    "mkcert": "mkdir ssl > /dev/null; mkcert --cert-file ssl/spandx.pem --key-file ssl/spandx-key.pem dev.foo.redhat.com qa.foo.redhat.com stage.foo.redhat.com prod.foo.redhat.com",
    "spaship": "./scripts/spaship.sh",
    "spaship:stage": "npm run spaship stage",
    "spaship:prod": "npm run spaship prod"
  },
  "engines": {
    "node": ">14.0.0"
  },
  "dependencies": {
    "@carbon/web-components": "^1.28.0",
    "@patternfly/elements": "^2.1.0",
    "@patternfly/pfe-card": "^1.12.3",
    "@patternfly/pfe-cta": "^1.12.3",
    "@patternfly/pfe-datetime": "^1.12.3",
    "@patternfly/pfe-progress-indicator": "^1.12.3",
    "@patternfly/pfe-styles": "^1.12.3",
    "@patternfly/pfe-tabs": "^1.12.3",
    "@rushstack/eslint-patch": "^1.1.3",
    "@vue/eslint-config-typescript": "^10.0.0",
    "vue": "^3.2.25",
    "vue-router": "^4.0.14"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.21.5",
    "@cypress/vite-dev-server": "^1.2.5",
    "@cypress/vue": "^3.0.1",
    "@spaship/cli": "^0.14.0",
    "@types/jest": "^29.5.1",
    "@types/node": "^17.0.28",
    "@types/node-fetch": "^2.6.1",
    "@vitejs/plugin-vue": "^2.3.1",
    "@vue/test-utils": "^2.0.0-rc.18",
    "cypress": "^9.7.0",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.0.3",
    "eslint-plugin-vuejs-accessibility": "^1.1.1",
    "jest": "^29.5.0",
    "prettier": "^2.6.2",
    "spandx": "^2.2.5",
    "ts-jest": "^29.1.0",
    "typescript": "^4.5.4",
    "vite": "^2.9.5",
    "vite-plugin-html": "^3.2.0",
    "vite-test": "^0.4.0",
    "vite-tsconfig-paths": "^3.4.1",
    "vue-tsc": "^0.34.7"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "plugins": [
      "vuejs-accessibility",
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:vue/vue3-essential",
      "plugin:vue/vue3-recommended",
      "@vue/eslint-config-typescript",
      "plugin:vuejs-accessibility/recommended",
      "prettier/prettier",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "rules": {
      "no-undef": "off",
      "vue/html-closing-bracket-newline": [
        "error",
        {
          "singleline": "never",
          "multiline": "never"
        }
      ],
      "bracketSameLine": 0
    },
    "globals": {
      "defineProps": "readonly"
    },
    "overrides": [
      {
        "files": [
          "**/__tests__/*.{j,t}s?(x)",
          "**/tests/unit/**/*.spec.{j,t}s?(x)"
        ],
        "env": {
          "jest": true
        }
      }
    ]
  }
}
